{
  hostname: "lemdro.id"
  bind: "0.0.0.0"
  port: 8536
  tls_enabled: true

  database: {
  	pool_size: 30
  }

  pictrs: {
    url: "http://lemdroid-pictrs.flycast/"
    api_key: "<TOKEN>"
  }

  email: {
    smtp_server: "smtp.purelymail.com:465"
    # Login name for smtp server
    smtp_login: "support@lemdro.id"
    # Address to send emails from, eg "noreply@your-instance.com"
    smtp_from_address: "support@lemdro.id"
    # Whether or not smtp connections should use tls. Can be none, tls, or starttls
    tls_type: "tls"
  }
}
